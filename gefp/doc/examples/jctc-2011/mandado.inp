# create density decomposition solver
solver = gefp.density.partitioning.DensityDecomposition(h2o, method='hf', acbs=False, no_cutoff=0.00000, xc_scale=1.00, l_dds=False, taylor=False)

# compute unperturbed monomer wavefunctions
solver.compute(polar_approx=True)

# print the solver information on screen and to the output file
print(solver)
solver.print_out()

# save polarization density
out = open('d.dat','w')
d = solver.deformation_density('pol')
n = int(d.shape[0]/2)
d_d1 = d[:n,:n]
d_d2 = d[n:,n:]
d_o1 = d[:n,n:]
d_o2 = d[n:,:n]
print("Diagonal: %16.8f" % (d_d1*d_d1).sum())
print("Diagonal: %16.8f" % (d_d2*d_d2).sum())
print("Offdiagl: %16.8f" % (d_o1*d_o1).sum())
print("Offdiagl: %16.8f" % (d_o2*d_o2).sum())
log = ''
for i in range(len(d)):
    log += len(d) * "%16.6E" % tuple(numpy.abs(d[i]))
    log += "\n"
out.write(log)
out.close()

