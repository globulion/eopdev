    # ==> General Psi4 Options <== #
    basis                         6-311++G**
    scf_type                      direct 
    guess                         core
    e_convergence                 1e-8
    d_convergence                 1e-9
    print                         1
    puream                        False
}


# run oepdev
energy('oepdev', molecule=menh2)
