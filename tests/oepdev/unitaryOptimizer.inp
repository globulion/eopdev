#!/usr/bin/python
sys.path.insert(0, './..')
import oepdev

basis {

# assign basset to all atoms
assign sto-3g-basic-test

# this basis set is to match pyquante-modified
[ sto-3g-basic-test ]
cartesian
****
H     0
S   3   1.00
      3.42525091             0.15432897
      0.62391373             0.53532814
      0.16885540             0.44463454
****
O     0
S   3   1.00
    130.7093200              0.15432897
     23.8088610              0.53532814
      6.4436083              0.44463454
SP   3   1.00
      5.0331513             -0.09996723             0.15591627
      1.1695961              0.39951283             0.60768372
      0.3803890              0.70011547             0.39195739
****
}

# test molecule
molecule h2o {
0 1
O         -3.08471        1.12313        0.00396
H         -2.11791        0.90877        0.01763
H         -3.12325        2.07922       -0.24921

units angstrom
symmetry c1
noreorient
nocom
}

set {
    # ==> OEPDEV Routine Specification <== #
    oepdev_target                 test
    oepdev_test_name              unitary_optimizer
    oepdev_test_mode              monomer
    oepdev_localize               False
    # ==> General Psi4 Options <== #
    scf_type                      direct 
    guess                         core
    e_convergence                 1e-5
    d_convergence                 1e-6
    print                         1
    puream                        False
}


# run oepdev
energy('oepdev', molecule=h2o)
