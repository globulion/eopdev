#!/usr/bin/python
sys.path.insert(0, './..')
import oepdev

# test molecule
molecule h2o {
0 1
O   0.000000   0.113009   0.000000
H   0.752785  -0.452035   0.000000
H  -0.752785  -0.452035   0.000000

units angstrom
symmetry c1
noreorient
nocom
}

set {
    # ==> OEPDEV Routine Specification <== #
    oepdev_target                 test
    oepdev_test_name              DMATPOL
    oepdev_localize               False
    oepdev_enable_trial           False
    # ==> CPHF <== #
    cphf_diis                     True
    cphf_diis_dim                 8
    cphf_maxiter                  200
    cphf_conver                   1e-8
    cphf_localizer                PIPEK_MEZEY
    # ==> General Psi4 Options <== #
    basis                         6-311++G**
    scf_type                      direct 
    guess                         core
    e_convergence                 1e-8
    d_convergence                 1e-9
    print                         1
    puream                        False
}


# run oepdev
energy('oepdev', molecule=h2o)
