#!/usr/bin/python
sys.path.insert(0, './..')
import oepdev

# test molecule from Otto-Ladik 1980
molecule dimer {
0 1
O     0.000000     0.000000     0.000000
H    -0.000000     0.757500     0.587100
H    -0.000000    -0.757500     0.587100
--
0 1
O    -2.580756     0.000000    -1.490000
H    -1.750757     0.000000    -1.010800
H    -2.323829     0.000000    -2.413320

units angstrom
symmetry c1
noreorient
nocom
}


set {
    # ==> OEPDEV Routine Specification <== #
    oepdev_target                 test
    oepdev_test_name              rep_energy_benchmark_dds
    oepdev_test_mode              dimer
    oepdev_localize               False
    # ==> General Psi4 Options <== #
    basis                         6-311++G**
    scf_type                      direct 
    guess                         core
    e_convergence                 1e-11
    d_convergence                 1e-10
    print                         1
    puream                        False
}





# run oepdev
energy('oepdev', molecule=dimer)
